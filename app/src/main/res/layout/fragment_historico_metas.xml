<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".navigation.HistoricoMetasFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="0dp"
            android:paddingEnd="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/titleHistoricoMetas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/hist_rico_de_metas"
            android:textColor="#FA050000"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/divider_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/divider_horizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="270dp"
            android:contentDescription="@string/divider_de_um_alimento_para_outro"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_horizontal_rule_black_24dp"
            app:layout_constraintBottom_toTopOf="@+id/textHistoricoMetas"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleHistoricoMetas" />

        <TextView
            android:id="@+id/textHistoricoMetas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="20dp"
            android:text="@string/selecione_periodo_para_realizar_a_busca"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_horizontal" />

    </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|end"
            android:layout_margin="16dp"
            android:clickable="true"
            android:contentDescription="@string/icone_para_adicionar_alimento_por_foto"
            android:focusable="true"
            app:backgroundTint="@android:color/black"
            app:srcCompat="@drawable/ic_date_range_white_24dp"
            tools:layout_editor_absoluteX="339dp"
            tools:layout_editor_absoluteY="591dp" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>