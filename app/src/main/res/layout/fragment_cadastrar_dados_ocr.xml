<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".navigation.CadastrarDadosOcrFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/home_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="0dp"
        android:paddingEnd="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="800dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/nomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/Nome"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/caloriaTextView"
                app:layout_constraintEnd_toStartOf="@+id/nomeEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/caloriaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/caloria"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/carboidratoTextView"
                app:layout_constraintEnd_toStartOf="@+id/caloriaEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nomeTextView" />

            <TextView
                android:id="@+id/carboidratoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/carboidrato"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/proteinaTextView"
                app:layout_constraintEnd_toStartOf="@+id/carboidratoEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/caloriaTextView" />

            <TextView
                android:id="@+id/proteinaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/proteina"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/gorduraTextView"
                app:layout_constraintEnd_toStartOf="@+id/proteinaEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carboidratoTextView" />

            <TextView
                android:id="@+id/gorduraTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/gordura"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/quantoVoceComeuTextView"
                app:layout_constraintEnd_toStartOf="@+id/gorduraEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/proteinaTextView" />

            <TextView
                android:id="@+id/quantoVoceComeuTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:text="@string/qual_porcao_tabela"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/porcaoTabelaTextView"
                app:layout_constraintEnd_toStartOf="@+id/quantoVoceComeuEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gorduraTextView" />

            <TextView
                android:id="@+id/porcaoTabelaTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/quanto_voce_comeu"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/okButton"
                app:layout_constraintEnd_toStartOf="@+id/porcaoTabelaEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/quantoVoceComeuTextView" />

            <Button
                android:id="@+id/okButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="8dp"
                android:text="@string/salvar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/porcaoTabelaTextView" />

            <EditText
                android:id="@+id/nomeEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="63dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/caloriaEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nomeTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/caloriaEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="@integer/max_length_macronutrientes"
                app:layout_constraintBottom_toTopOf="@+id/carboidratoEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/caloriaTextView"
                app:layout_constraintTop_toBottomOf="@+id/nomeEditText" />

            <EditText
                android:id="@+id/carboidratoEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="@integer/max_length_macronutrientes"
                app:layout_constraintBottom_toTopOf="@+id/proteinaEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/carboidratoTextView"
                app:layout_constraintTop_toBottomOf="@+id/caloriaEditText" />

            <EditText
                android:id="@+id/proteinaEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="33dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="@integer/max_length_macronutrientes"
                app:layout_constraintBottom_toTopOf="@+id/gorduraEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/proteinaTextView"
                app:layout_constraintTop_toBottomOf="@+id/carboidratoEditText" />

            <EditText
                android:id="@+id/gorduraEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="@integer/max_length_macronutrientes"
                app:layout_constraintBottom_toTopOf="@+id/quantoVoceComeuEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/gorduraTextView"
                app:layout_constraintTop_toBottomOf="@+id/proteinaEditText" />

            <EditText
                android:id="@+id/quantoVoceComeuEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="@integer/max_length_macronutrientes"
                app:layout_constraintBottom_toTopOf="@+id/porcaoTabelaEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/quantoVoceComeuTextView"
                app:layout_constraintTop_toBottomOf="@+id/gorduraEditText" />

            <EditText
                android:id="@+id/porcaoTabelaEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="25dp"
                android:cursorVisible="false"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="@integer/max_length_macronutrientes"
                app:layout_constraintBottom_toTopOf="@+id/okButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/porcaoTabelaTextView"
                app:layout_constraintTop_toBottomOf="@+id/quantoVoceComeuEditText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right|end"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/icone_para_adicionar_alimento_por_foto"
            app:backgroundTint="@android:color/black"
            app:srcCompat="@drawable/ic_add_a_photo_white_24dp"
            tools:layout_editor_absoluteX="336dp"
            tools:layout_editor_absoluteY="707dp" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>