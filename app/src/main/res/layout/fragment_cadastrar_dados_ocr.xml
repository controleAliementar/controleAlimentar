<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".navigation.CadastrarDadosOcrFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="0dp"
            android:paddingEnd="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/salvarButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="16dp"
                android:text="@android:string/ok"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/porcaoEditText" />

            <TextView
                android:id="@+id/informacoesTabelaNutricionalTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/informa_es_da_tabela_nutricional_do_alimento"
                android:textAlignment="center"
                android:textColor="#FA050000"
                android:textSize="24sp"
                app:layout_constraintBottom_toTopOf="@+id/nomeEditText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/caloriaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="16dp"
                android:text="@string/caloria"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/carboidratoTextView"
                app:layout_constraintEnd_toStartOf="@+id/caloriaValueView"
                app:layout_constraintHorizontal_bias="0.448"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nomeAlimentoTextView" />

            <TextView
                android:id="@+id/carboidratoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:text="@string/carboidrato"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/proteinaTextView"
                app:layout_constraintEnd_toStartOf="@+id/carboidratoText"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/caloriaTextView" />

            <TextView
                android:id="@+id/proteinaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:text="@string/proteina"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/gorduraTextView"
                app:layout_constraintEnd_toStartOf="@+id/proteinaText"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/carboidratoTextView" />

            <TextView
                android:id="@+id/gorduraTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:text="@string/gordura"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/porcaoText"
                app:layout_constraintEnd_toStartOf="@+id/gorduraText"
                app:layout_constraintHorizontal_bias="0.505"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/proteinaTextView" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="351dp" />

            <EditText
                android:id="@+id/nomeEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:maxLength="30"
                android:digits="@string/caracteres_aceitos_campo_string"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/caloriaValueView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nomeAlimentoTextView"
                app:layout_constraintTop_toBottomOf="@+id/informacoesTabelaNutricionalTitle" />

            <EditText
                android:id="@+id/caloriaValueView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/carboidratoText"
                app:layout_constraintEnd_toStartOf="@+id/KcalTextView"
                app:layout_constraintStart_toEndOf="@+id/caloriaTextView"
                app:layout_constraintTop_toBottomOf="@+id/nomeEditText" />

            <EditText
                android:id="@+id/gorduraText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:maxLength="7"
                android:inputType="numberDecimal"
                android:textColorLink="#00444040"
                app:layout_constraintBottom_toTopOf="@+id/porcaoEditText"
                app:layout_constraintEnd_toStartOf="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/gorduraTextView"
                app:layout_constraintTop_toBottomOf="@+id/proteinaText" />

            <EditText
                android:id="@+id/porcaoEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:maxLength="7"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toTopOf="@+id/salvarButton"
                app:layout_constraintEnd_toStartOf="@+id/spinner"
                app:layout_constraintStart_toEndOf="@+id/help_icon"
                app:layout_constraintTop_toBottomOf="@+id/gorduraText" />

            <EditText
                android:id="@+id/proteinaText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:singleLine="true"
                android:textColorLink="#00444040"
                app:layout_constraintBottom_toTopOf="@+id/gorduraText"
                app:layout_constraintEnd_toStartOf="@+id/textView3"
                app:layout_constraintStart_toEndOf="@+id/proteinaTextView"
                app:layout_constraintTop_toBottomOf="@+id/carboidratoText" />

            <EditText
                android:id="@+id/carboidratoText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:textColorLink="#00444040"
                app:layout_constraintBottom_toTopOf="@+id/proteinaText"
                app:layout_constraintEnd_toStartOf="@+id/gramasTextView2"
                app:layout_constraintStart_toEndOf="@+id/carboidratoTextView"
                app:layout_constraintTop_toBottomOf="@+id/caloriaValueView" />

            <TextView
                android:id="@+id/KcalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="30dp"
                android:text="@string/Kcal"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/gramasTextView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/caloriaValueView"
                app:layout_constraintTop_toBottomOf="@+id/nomeEditText" />

            <TextView
                android:id="@+id/gramasTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:text="@string/gramas"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/carboidratoText"
                app:layout_constraintTop_toBottomOf="@+id/KcalTextView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="50dp"
                android:text="@string/gramas"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/proteinaText"
                app:layout_constraintTop_toBottomOf="@+id/gramasTextView2" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="60dp"
                android:text="@string/gramas"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/spinner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/gorduraText"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/nomeAlimentoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="16dp"
                android:text="@string/Nome"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/caloriaTextView"
                app:layout_constraintEnd_toStartOf="@+id/nomeEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/informacoesTabelaNutricionalTitle" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="98dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="40dp"
                android:entries="@array/porcoes_list_default"
                android:spinnerMode="dropdown"
                app:layout_constraintBottom_toTopOf="@+id/salvarButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/porcaoEditText"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/porcaoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="16dp"
                android:text="@string/qual_porcao_tabela"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/salvarButton"
                app:layout_constraintEnd_toStartOf="@+id/help_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gorduraTextView" />

            <ImageView
                android:id="@+id/help_icon"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_help_black_24dp"
                app:layout_constraintBottom_toTopOf="@+id/salvarButton"
                app:layout_constraintEnd_toStartOf="@+id/porcaoEditText"
                app:layout_constraintStart_toEndOf="@+id/porcaoText"
                app:layout_constraintTop_toBottomOf="@+id/gorduraTextView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

<!--        <com.google.android.material.floatingactionbutton.FloatingActionButton-->
