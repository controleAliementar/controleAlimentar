    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/incluirPorFotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:clickable="true"
            android:contentDescription="@string/icone_adicionar_alimento_por_cadastro"
            android:focusable="true"
            app:backgroundTint="@android:color/black"
            app:srcCompat="@drawable/ic_add_white_24dp"
            tools:layout_editor_absoluteX="339dp"
            tools:layout_editor_absoluteY="600dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/buscarAlimentoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:clickable="true"
            android:contentDescription="@string/icone_para_adicionar_alimento_por_busca"
            android:focusable="true"
            app:backgroundTint="@android:color/black"
            app:srcCompat="@drawable/ic_search_white_24dp"
            tools:layout_editor_absoluteX="339dp"
            tools:layout_editor_absoluteY="588dp"
            app:layout_anchor="@id/incluirPorFotoButton"
            app:layout_anchorGravity="top"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>